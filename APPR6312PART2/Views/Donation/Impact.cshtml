@{
    ViewData["Title"] = "Donation Impact";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-success text-center mb-5"> Our Collective Impact</h1>

            <!-- Impact Statistics -->
            <div class="row mb-5">
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="display-4 text-success fw-bold">0</div>
                            <p class="text-muted">Total Donations Received</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-body">
                            <div class="display-4 text-warning fw-bold">$0.00</div>
                            <p class="text-muted">Total Monetary Value</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="display-4 text-success fw-bold">0</div>
                            <p class="text-muted">Total Items Donated</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-body">
                            <div class="display-4 text-warning fw-bold">0</div>
                            <p class="text-muted">Recent Donations</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Impact Stories -->
            <div class="row mb-5">
                <div class="col-12">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h4 class="mb-0">🌟 Stories of Impact</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="text-center">
                                        <div class="text-warning display-6">🏠</div>
                                        <h5 class="text-success">Shelter Provided</h5>
                                        <p class="text-muted">Your donations helped provide temporary shelter for 500+ families affected by recent floods.</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="text-center">
                                        <div class="text-warning display-6">🍲</div>
                                        <h5 class="text-success">Meals Served</h5>
                                        <p class="text-muted">Food donations have served over 10,000 meals to disaster-affected communities.</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="text-center">
                                        <div class="text-warning display-6">🏥</div>
                                        <h5 class="text-success">Medical Aid</h5>
                                        <p class="text-muted">Medical supplies have supported 25+ healthcare facilities in disaster zones.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Donations -->
            <div class="row">
                <div class="col-12">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h4 class="mb-0"> Recent Donations</h4>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info text-center">
                                <h5>No donations yet</h5>
                                <p class="mb-0">Be the first to make a donation and see your impact here!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-5">
                <h3 class="text-success mb-3">Ready to Make an Impact?</h3>
                <p class="text-muted mb-4">Join our community of donors and help make a difference today.</p>
                <a href="@Url.Action("Donate", "Donation")" class="btn btn-success btn-lg me-3">Make a Donation</a>
                <a href="@Url.Action("ViewDonations", "Donation")" class="btn btn-outline-warning btn-lg">View All Donations</a>
            </div>
        </div>
    </div>
</div>