@model APPR6312PART2.Models.Donation
@{
    ViewData["Title"] = "Donation Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">Donation Details</h2>
                        <span class="badge bg-warning text-dark fs-6">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Donor Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h4 class="text-success mb-3"> Donor Information</h4>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @Model.DonorName</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                        </div>
                    </div>

                    <!-- Donation Details -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h4 class="text-success mb-3">Donation Details</h4>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Type:</strong> <span class="badge bg-info">@Model.DonationType</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Allocation:</strong> @Model.AllocationPreference</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ItemDescription))
                        {
                            <div class="col-12">
                                <p><strong>Description:</strong> @Model.ItemDescription</p>
                            </div>
                        }
                        @if (Model.Quantity.HasValue)
                        {
                            <div class="col-md-6">
                                <p><strong>Quantity:</strong> <span class="text-warning fw-bold">@Model.Quantity.Value.ToString("N0") items</span></p>
                            </div>
                        }
                        @if (Model.MonetaryAmount.HasValue)
                        {
                            <div class="col-md-6">
                                <p><strong>Amount:</strong> <span class="text-success fw-bold">$@Model.MonetaryAmount.Value.ToString("N2")</span></p>
                            </div>
                        }
                    </div>

                    <!-- Delivery Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h4 class="text-success mb-3">🚚 Delivery Information</h4>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <strong>Urgent Delivery:</strong>
                                @if (Model.IsUrgent)
                                {
                                    <span class="badge bg-danger">Yes - Urgent</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </p>
                        </div>
                        @if (Model.PreferredDate.HasValue)
                        {
                            <div class="col-md-6">
                                <p><strong>Preferred Date:</strong> @Model.PreferredDate.Value.ToString("MMM dd, yyyy")</p>
                            </div>
                        }
                    </div>

                    <!-- Additional Information -->
                    @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                    {
                        <div class="mb-4">
                            <h5 class="text-success">📝 Additional Notes</h5>
                            <p class="bg-light p-3 rounded">@Model.AdditionalNotes</p>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Donation Date:</strong> @Model.DonationDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="@Url.Action("ViewDonations", "Donation")" class="btn btn-outline-secondary me-md-2">Back to List</a>
                        <a href="@Url.Action("Donate", "Donation")" class="btn btn-success">Make Another Donation</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>