@{
    ViewData["Title"] = "System Analytics";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-success">System Analytics</h1>
                <div>
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary me-2">📊 Dashboard</a>
                    <a href="@Url.Action("Users", "Dashboard")" class="btn btn-outline-warning">👥 Users</a>
                </div>
            </div>

            <!-- Analytics Overview -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card border-success text-center">
                        <div class="card-body">
                            <div class="text-success display-6"></div>
                            <h4 class="text-success">12 Months</h4>
                            <p class="text-muted mb-0">Data History</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-warning text-center">
                        <div class="card-body">
                            <div class="text-warning display-6"></div>
                            <h4 class="text-warning">$360,000</h4>
                            <p class="text-muted mb-0">Total Donations</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-success text-center">
                        <div class="card-body">
                            <div class="text-success display-6"></div>
                            <h4 class="text-success">16</h4>
                            <p class="text-muted mb-0">Disasters This Year</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-warning text-center">
                        <div class="card-body">
                            <div class="text-warning display-6"></div>
                            <h4 class="text-warning">360</h4>
                            <p class="text-muted mb-0">Volunteers</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts and Graphs -->
            <div class="row">
                <!-- Monthly Donations -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-success h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0"> Monthly Donations</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <div class="text-muted">Chart visualization placeholder</div>
                                <small class="text-muted">Monthly donation trends would be displayed here</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Disaster Trends -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0"> Disaster Trends</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <div class="text-muted">Chart visualization placeholder</div>
                                <small class="text-muted">Disaster occurrence trends would be displayed here</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Donors and Disaster Distribution -->
            <div class="row">
                <!-- Top Donors -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0"> Top Donors</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">John Smith</h6>
                                        <small class="text-muted">12 donations</small>
                                    </div>
                                    <span class="text-success fw-bold">$5,000</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Sarah Johnson</h6>
                                        <small class="text-muted">8 donations</small>
                                    </div>
                                    <span class="text-success fw-bold">$3,500</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Mike Davis</h6>
                                        <small class="text-muted">15 donations</small>
                                    </div>
                                    <span class="text-success fw-bold">$2,800</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Emily Wilson</h6>
                                        <small class="text-muted">6 donations</small>
                                    </div>
                                    <span class="text-success fw-bold">$2,200</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Chris Brown</h6>
                                        <small class="text-muted">10 donations</small>
                                    </div>
                                    <span class="text-success fw-bold">$1,800</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Disaster Type Distribution -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0">Disaster Type Distribution</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Flood</span>
                                    <div>
                                        <span class="badge bg-success me-2">25</span>
                                        <small class="text-muted">35%</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Earthquake</span>
                                    <div>
                                        <span class="badge bg-success me-2">18</span>
                                        <small class="text-muted">25%</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Wildfire</span>
                                    <div>
                                        <span class="badge bg-warning me-2">12</span>
                                        <small class="text-muted">17%</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Hurricane</span>
                                    <div>
                                        <span class="badge bg-warning me-2">8</span>
                                        <small class="text-muted">11%</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>Other</span>
                                    <div>
                                        <span class="badge bg-info me-2">9</span>
                                        <small class="text-muted">12%</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>