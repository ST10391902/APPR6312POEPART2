@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-success"> Dashboard Overview</h1>
                <div class="btn-group">
                    <a href="@Url.Action("Analytics", "Dashboard")" class="btn btn-outline-success"> Analytics</a>
                    <a href="@Url.Action("Users", "Dashboard")" class="btn btn-outline-warning"> User Management</a>
                    <a href="@Url.Action("Settings", "Dashboard")" class="btn btn-outline-info"> Settings</a>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-5">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-3 text-center">
                                    <div class="text-success display-6"></div>
                                </div>
                                <div class="col-9">
                                    <h4 class="card-title text-success">0</h4>
                                    <p class="card-text text-muted">Total Users</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-success">
                            <small class="text-success">+0 this month</small>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-3 text-center">
                                    <div class="text-warning display-6"></div>
                                </div>
                                <div class="col-9">
                                    <h4 class="card-title text-warning">0</h4>
                                    <p class="card-text text-muted">Active Disasters</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-warning">
                            <small class="text-warning">0 critical</small>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-3 text-center">
                                    <div class="text-success display-6"></div>
                                </div>
                                <div class="col-9">
                                    <h4 class="card-title text-success">0</h4>
                                    <p class="card-text text-muted">Total Donations</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-success">
                            <small class="text-success">$0.00 total</small>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-3 text-center">
                                    <div class="text-warning display-6"></div>
                                </div>
                                <div class="col-9">
                                    <h4 class="card-title text-warning">0</h4>
                                    <p class="card-text text-muted">Active Volunteers</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-warning">
                            <small class="text-warning">5 tasks available</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity and Quick Actions -->
            <div class="row">
                <!-- Recent Activity -->
                <div class="col-lg-8 mb-4">
                    <div class="card border-success h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0"> Recent Activity</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex align-items-center">
                                    <span class="me-3"></span>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">New donation received</h6>
                                        <small class="text-muted">2 hours ago</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex align-items-center">
                                    <span class="me-3"></span>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Flood reported in Coastal Area</h6>
                                        <small class="text-muted">5 hours ago</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex align-items-center">
                                    <span class="me-3"></span>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">New volunteer registered</h6>
                                        <small class="text-muted">1 day ago</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex align-items-center">
                                    <span class="me-3"></span>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">New user account created</h6>
                                        <small class="text-muted">1 day ago</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex align-items-center">
                                    <span class="me-3"></span>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Medical supplies donation</h6>
                                        <small class="text-muted">2 days ago</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="col-lg-4 mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0">🚀 Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Report", "Disaster")" class="btn btn-outline-success mb-2">
                                     Report New Disaster
                                </a>
                                <a href="@Url.Action("Donate", "Donation")" class="btn btn-outline-success mb-2">
                                     Process Donation
                                </a>
                                <a href="@Url.Action("Register", "Volunteer")" class="btn btn-outline-warning mb-2">
                                     Register Volunteer
                                </a>
                                <a href="@Url.Action("ViewUsers", "Dashboard")" class="btn btn-outline-warning mb-2">
                                     Manage Users
                                </a>
                                <a href="@Url.Action("Analytics", "Dashboard")" class="btn btn-outline-info">
                                     View Analytics
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Status -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">🟢 System Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3 mb-3">
                                    <div class="text-success">
                                        <div class="fs-1">✅</div>
                                        <h6>Authentication</h6>
                                        <small class="text-muted">Operational</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-success">
                                        <div class="fs-1">✅</div>
                                        <h6>Database</h6>
                                        <small class="text-muted">Operational</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-success">
                                        <div class="fs-1">✅</div>
                                        <h6>Payments</h6>
                                        <small class="text-muted">Operational</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-success">
                                        <div class="fs-1">✅</div>
                                        <h6>Notifications</h6>
                                        <small class="text-muted">Operational</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>