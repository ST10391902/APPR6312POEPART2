@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="text-center mb-4 text-success">About Gift of the Givers</h1>

            <!-- Founder Section -->
            <div class="card mb-4 border-success">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <div class="placeholder-image-small bg-light rounded-circle p-4 mb-3">
                                <span class="text-success">Founder</span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h3 class="card-title text-success">Our Inspiration</h3>
                            <p class="card-text">
                                Founded in 1992 by Dr. Imtiaz Sooliman, Gift of the Givers is Africa's largest disaster relief
                                organization of non-governmental origin. Our work is inspired by the Islamic principles of
                                compassion, service to humanity, and the belief that "The best among people are those who benefit mankind."
                            </p>
                            <small class="text-muted">- Dr. Imtiaz Sooliman, Founder and Chairman</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mission Section -->
            <div class="card mb-4 border-warning">
                <div class="card-body">
                    <h3 class="card-title text-success">Our Mission</h3>
                    <p class="card-text">
                        To serve all people, irrespective of race, religion, culture, or political affiliation, by providing
                        comprehensive humanitarian services and disaster response across the globe. We deliver hope, restore
                        dignity, and save lives through immediate intervention and sustainable development programs.
                    </p>
                </div>
            </div>

            <!-- What We Do Section -->
            <div class="card mb-4 border-success">
                <div class="card-body">
                    <h3 class="card-title text-success">Our Comprehensive Services</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">🏥</span>
                                    <span>Emergency Medical Response</span>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">💧</span>
                                    <span>Water Drilling and Purification</span>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">🍽️</span>
                                    <span>Food Security Programs</span>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">🏠</span>
                                    <span>Shelter and Reconstruction</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">📚</span>
                                    <span>Educational Support</span>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">👶</span>
                                    <span>Orphan and Child Care</span>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">🌱</span>
                                    <span>Agricultural Development</span>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <span class="text-warning me-2">🔄</span>
                                    <span>Skills Development Programs</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Impact Section -->
            <div class="card mb-4 border-warning">
                <div class="card-body">
                    <h3 class="card-title text-success">Our Global Impact</h3>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="text-success fw-bold h4">45+</div>
                            <div class="text-muted">Countries Served</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-success fw-bold h4">R2.5B+</div>
                            <div class="text-muted">Humanitarian Aid</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-success fw-bold h4">30+</div>
                            <div class="text-muted">Years of Service</div>
                        </div>
                    </div>
                    <p class="mt-3">
                        From earthquake response in Turkey to drought relief in Somalia, from flood assistance in South Africa
                        to medical missions in Syria, our teams have touched millions of lives across continents, always
                        guided by our motto: "We serve all of humanity."
                    </p>
                </div>
            </div>

            <!-- Values Section -->
            <div class="card mb-4 border-success">
                <div class="card-body">
                    <h3 class="card-title text-success">Our Core Values</h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-warning">Compassion</h6>
                            <p class="small">Serving with empathy and understanding for all human beings</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-warning">Integrity</h6>
                            <p class="small">Maintaining transparency and accountability in all operations</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-warning">Excellence</h6>
                            <p class="small">Delivering the highest quality humanitarian services</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-warning">Unity</h6>
                            <p class="small">Bringing people together across all divides</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>