@{
    ViewData["Title"] = "Report Incident - Gift of the Givers";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        /* Header Styles */
        .header {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
            padding: 1rem 0;
            box-shadow: 0 2px 15px rgba(39, 174, 96, 0.3);
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: white;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

            .nav-links a {
                color: white;
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s ease;
                padding: 0.5rem 1rem;
                border-radius: 25px;
            }

                .nav-links a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    transform: translateY(-2px);
                }

                .nav-links a.active {
                    background: rgba(241, 196, 15, 0.3);
                    color: #f1c40f;
                }

        /* Hero Section */
        .hero {
            background: linear-gradient(rgba(39, 174, 96, 0.9), rgba(46, 204, 113, 0.9)), url('https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 4rem 2rem;
        }

        .hero-content h1 {
            font-size: 2.8rem;
            margin-bottom: 1rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-content p {
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
            opacity: 0.95;
        }

        /* Main Content */
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }

        /* Incident Form Section */
        .incident-form-section {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(39, 174, 96, 0.1);
            padding: 3rem;
            margin-bottom: 3rem;
        }

        .section-title {
            color: #27ae60;
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .section-subtitle {
            color: #7f8c8d;
            text-align: center;
            margin-bottom: 3rem;
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 2rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 1rem;
            border: 2px solid #ecf0f1;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

            .form-input:focus, .form-select:focus, .form-textarea:focus {
                outline: none;
                border-color: #27ae60;
                background: white;
                box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
            }

        .form-textarea {
            resize: vertical;
            min-height: 120px;
        }

        .required {
            color: #e74c3c;
        }

        /* Emergency Level */
        .emergency-level {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .level-option {
            position: relative;
        }

            .level-option input {
                display: none;
            }

            .level-option label {
                display: block;
                padding: 1.5rem;
                background: #f8f9fa;
                border: 2px solid #ecf0f1;
                border-radius: 8px;
                text-align: center;
                cursor: pointer;
                transition: all 0.3s ease;
                font-weight: 500;
            }

            .level-option input:checked + label {
                border-color: #27ae60;
                background: rgba(39, 174, 96, 0.1);
                color: #27ae60;
            }

        /* Disaster Type */
        .disaster-type-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .disaster-option {
            position: relative;
        }

            .disaster-option input {
                display: none;
            }

            .disaster-option label {
                display: flex;
                align-items: center;
                padding: 1rem 1.5rem;
                background: #f8f9fa;
                border: 2px solid #ecf0f1;
                border-radius: 8px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .disaster-option input:checked + label {
                border-color: #f1c40f;
                background: rgba(241, 196, 15, 0.1);
                color: #f39c12;
            }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 3rem;
        }

        .btn {
            padding: 1rem 2.5rem;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: #f1c40f;
            color: #2c3e50;
            box-shadow: 0 4px 15px rgba(241, 196, 15, 0.4);
        }

            .btn-primary:hover {
                background: #f39c12;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(241, 196, 15, 0.6);
                color: white;
            }

        .btn-secondary {
            background: #95a5a6;
            color: white;
        }

            .btn-secondary:hover {
                background: #7f8c8d;
                transform: translateY(-2px);
            }

        /* Info Section */
        .info-section {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
            padding: 3rem 2rem;
            border-radius: 15px;
            margin-bottom: 3rem;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        .info-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 10px;
            text-align: center;
            backdrop-filter: blur(10px);
        }

            .info-card h3 {
                color: #f1c40f;
                margin-bottom: 1rem;
                font-size: 1.4rem;
            }

        /* Emergency Contacts */
        .emergency-contacts {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(39, 174, 96, 0.1);
            padding: 3rem;
        }

        .contacts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #f1c40f;
        }

        .contact-icon {
            font-size: 2rem;
            color: #27ae60;
        }

        .contact-info h4 {
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .contact-info p {
            color: #7f8c8d;
        }

        /* Footer */
        .footer {
            background: #2c3e50;
            color: white;
            text-align: center;
            padding: 3rem 2rem;
            margin-top: 4rem;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin: 2rem 0;
            flex-wrap: wrap;
        }

            .footer-links a {
                color: #f1c40f;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer-links a:hover {
                    color: #27ae60;
                }

        /* Media Queries */
        @@media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                gap: 1.5rem;
            }

            .nav-links {
                gap: 1rem;
                flex-wrap: wrap;
                justify-content: center;
            }

            .form-row {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .hero-content h1 {
                font-size: 2.2rem;
            }

            .incident-form-section {
                padding: 2rem 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .hero {
                padding: 3rem 1rem;
            }

            .hero-content h1 {
                font-size: 1.8rem;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .emergency-level, .disaster-type-grid {
                grid-template-columns: 1fr;
            }

            .contacts-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Form Validation Styles */
        .form-input:invalid, .form-select:invalid {
            border-color: #e74c3c;
        }

        .form-input:valid, .form-select:valid {
            border-color: #27ae60;
        }

        .error-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: none;
        }

        .form-input:invalid + .error-message {
            display: block;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <nav class="navbar">
            <a href="#" class="logo">🌍 GiftoftheGivers</a>
            <ul class="nav-links">
                <li><a href="#">Home</a></li>
                <li><a href="#" class="active">Report Incident</a></li>
                <li><a href="#">Donate</a></li>
                <li><a href="#">Volunteer</a></li>
                <li><a href="#">Login</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Report a Disaster Incident</h1>
            <p>Your timely report can help save lives and coordinate effective relief efforts</p>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Incident Form -->
        <section class="incident-form-section">
            <h2 class="section-title">Incident Report Form</h2>
            <p class="section-subtitle">Please provide accurate information to help us respond effectively</p>

            <form id="incidentForm">
                <!-- Basic Information -->
                <div class="form-group">
                    <h3 style="color: #27ae60; margin-bottom: 1rem; border-bottom: 2px solid #f1c40f; padding-bottom: 0.5rem;">Basic Information</h3>

                    <div class="form-row">
                        <div>
                            <label for="reporterName" class="form-label">Your Full Name <span class="required">*</span></label>
                            <input type="text" id="reporterName" class="form-input" required placeholder="Enter your full name">
                            <div class="error-message">Please enter your name</div>
                        </div>
                        <div>
                            <label for="reporterPhone" class="form-label">Phone Number <span class="required">*</span></label>
                            <input type="tel" id="reporterPhone" class="form-input" required placeholder="+27 XXX XXX XXXX">
                            <div class="error-message">Please enter a valid phone number</div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div>
                            <label for="reporterEmail" class="form-label">Email Address</label>
                            <input type="email" id="reporterEmail" class="form-input" placeholder="your@email.com">
                        </div>
                        <div>
                            <label for="organization" class="form-label">Organization (if any)</label>
                            <input type="text" id="organization" class="form-input" placeholder="Your organization name">
                        </div>
                    </div>
                </div>

                <!-- Incident Details -->
                <div class="form-group">
                    <h3 style="color: #27ae60; margin-bottom: 1rem; border-bottom: 2px solid #f1c40f; padding-bottom: 0.5rem;">Incident Details</h3>

                    <div class="form-row">
                        <div>
                            <label for="incidentType" class="form-label">Type of Disaster <span class="required">*</span></label>
                            <select id="incidentType" class="form-select" required>
                                <option value="">Select disaster type</option>
                                <option value="flood">Flood</option>
                                <option value="earthquake">Earthquake</option>
                                <option value="wildfire">Wildfire</option>
                                <option value="hurricane">Hurricane/Cyclone</option>
                                <option value="drought">Drought</option>
                                <option value="landslide">Landslide</option>
                                <option value="tsunami">Tsunami</option>
                                <option value="storm">Severe Storm</option>
                                <option value="other">Other</option>
                            </select>
                            <div class="error-message">Please select disaster type</div>
                        </div>
                        <div>
                            <label for="emergencyLevel" class="form-label">Emergency Level <span class="required">*</span></label>
                            <select id="emergencyLevel" class="form-select" required>
                                <option value="">Select emergency level</option>
                                <option value="low">Low - Monitoring</option>
                                <option value="medium">Medium - Alert</option>
                                <option value="high">High - Response Needed</option>
                                <option value="critical">Critical - Immediate Action</option>
                            </select>
                            <div class="error-message">Please select emergency level</div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div>
                            <label for="incidentDate" class="form-label">Date of Incident <span class="required">*</span></label>
                            <input type="date" id="incidentDate" class="form-input" required>
                            <div class="error-message">Please select incident date</div>
                        </div>
                        <div>
                            <label for="incidentTime" class="form-label">Time of Incident</label>
                            <input type="time" id="incidentTime" class="form-input">
                        </div>
                    </div>
                </div>

                <!-- Location Information -->
                <div class="form-group">
                    <h3 style="color: #27ae60; margin-bottom: 1rem; border-bottom: 2px solid #f1c40f; padding-bottom: 0.5rem;">Location Information</h3>

                    <div class="form-row">
                        <div>
                            <label for="country" class="form-label">Country <span class="required">*</span></label>
                            <input type="text" id="country" class="form-input" required value="South Africa" placeholder="Country name">
                            <div class="error-message">Please enter country</div>
                        </div>
                        <div>
                            <label for="province" class="form-label">Province <span class="required">*</span></label>
                            <select id="province" class="form-select" required>
                                <option value="">Select province</option>
                                <option value="gauteng">Gauteng</option>
                                <option value="western_cape">Western Cape</option>
                                <option value="eastern_cape">Eastern Cape</option>
                                <option value="kzn">KwaZulu-Natal</option>
                                <option value="limpopo">Limpopo</option>
                                <option value="mpumalanga">Mpumalanga</option>
                                <option value="north_west">North West</option>
                                <option value="free_state">Free State</option>
                                <option value="northern_cape">Northern Cape</option>
                            </select>
                            <div class="error-message">Please select province</div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div>
                            <label for="city" class="form-label">City/Town <span class="required">*</span></label>
                            <input type="text" id="city" class="form-input" required placeholder="City or town name">
                            <div class="error-message">Please enter city/town</div>
                        </div>
                        <div>
                            <label for="area" class="form-label">Specific Area/Neighborhood</label>
                            <input type="text" id="area" class="form-input" placeholder="Specific area or neighborhood">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exactLocation" class="form-label">Exact Location Details</label>
                        <textarea id="exactLocation" class="form-textarea" placeholder="Provide landmarks, street names, GPS coordinates, or any specific location details that can help our team locate the area"></textarea>
                    </div>
                </div>

                <!-- Impact Assessment -->
                <div class="form-group">
                    <h3 style="color: #27ae60; margin-bottom: 1rem; border-bottom: 2px solid #f1c40f; padding-bottom: 0.5rem;">Impact Assessment</h3>

                    <div class="form-row">
                        <div>
                            <label for="peopleAffected" class="form-label">Estimated People Affected</label>
                            <input type="number" id="peopleAffected" class="form-input" placeholder="Approximate number" min="0">
                        </div>
                        <div>
                            <label for="injuries" class="form-label">Reported Injuries</label>
                            <input type="number" id="injuries" class="form-input" placeholder="Number of injuries" min="0">
                        </div>
                    </div>

                    <div class="form-row">
                        <div>
                            <label for="fatalities" class="form-label">Reported Fatalities</label>
                            <input type="number" id="fatalities" class="form-input" placeholder="Number of fatalities" min="0">
                        </div>
                        <div>
                            <label for="displaced" class="form-label">People Displaced</label>
                            <input type="number" id="displaced" class="form-input" placeholder="Number displaced" min="0">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="damageDescription" class="form-label">Damage Description <span class="required">*</span></label>
                        <textarea id="damageDescription" class="form-textarea" required placeholder="Describe the extent of damage to infrastructure, homes, facilities, etc."></textarea>
                        <div class="error-message">Please describe the damage</div>
                    </div>

                    <div class="form-group">
                        <label for="immediateNeeds" class="form-label">Immediate Needs</label>
                        <textarea id="immediateNeeds" class="form-textarea" placeholder="What are the most urgent needs? (e.g., medical aid, shelter, food, water)"></textarea>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="form-group">
                    <h3 style="color: #27ae60; margin-bottom: 1rem; border-bottom: 2px solid #f1c40f; padding-bottom: 0.5rem;">Additional Information</h3>

                    <div class="form-group">
                        <label for="additionalInfo" class="form-label">Additional Details</label>
                        <textarea id="additionalInfo" class="form-textarea" placeholder="Any other relevant information, ongoing risks, accessibility issues, or special considerations"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="sources" class="form-label">Information Sources</label>
                        <input type="text" id="sources" class="form-input" placeholder="How did you get this information? (e.g., eyewitness, media, official report)">
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        🚨 Submit Incident Report
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        🔄 Clear Form
                    </button>
                </div>
            </form>
        </section>

        <!-- Important Information -->
        <section class="info-section">
            <h2 style="text-align: center; margin-bottom: 2rem; color: #f1c40f;">Important Information</h2>
            <div class="info-grid">
                <div class="info-card">
                    <h3>🚨 Emergency Response</h3>
                    <p>Our team will review your report immediately and coordinate with local authorities for rapid response.</p>
                </div>
                <div class="info-card">
                    <h3>📞 Stay Available</h3>
                    <p>Please keep your phone accessible as our team may contact you for additional information.</p>
                </div>
                <div class="info-card">
                    <h3>🔒 Your Privacy</h3>
                    <p>Your personal information is protected and will only be used for emergency response purposes.</p>
                </div>
            </div>
        </section>

        <!-- Emergency Contacts -->
        <section class="emergency-contacts">
            <h2 class="section-title">Emergency Contacts</h2>
            <p class="section-subtitle">For immediate life-threatening emergencies, contact local authorities first</p>

            <div class="contacts-grid">
                <div class="contact-item">
                    <div class="contact-icon">🚑</div>
                    <div class="contact-info">
                        <h4>Emergency Medical</h4>
                        <p>10177</p>
                    </div>
                </div>
                <div class="contact-item">
                    <div class="contact-icon">🚒</div>
                    <div class="contact-info">
                        <h4>Fire Department</h4>
                        <p>Emergency: 112</p>
                    </div>
                </div>
                <div class="contact-item">
                    <div class="contact-icon">👮</div>
                    <div class="contact-info">
                        <h4>Police Emergency</h4>
                        <p>10111</p>
                    </div>
                </div>
                <div class="contact-item">
                    <div class="contact-icon">🌍</div>
                    <div class="contact-info">
                        <h4>Gift of the Givers</h4>
                        <p>+27 82 507 5777</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <h3 style="color: #f1c40f; margin-bottom: 1rem;">Gift of the Givers Foundation</h3>
            <p>Africa's largest disaster response non-governmental organization</p>
            <div class="footer-links">
                <a href="#">About Us</a>
                <a href="#">Our Mission</a>
                <a href="#">Contact</a>
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
            </div>
            <p>&copy; 2024 Gift of the Givers Foundation. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('incidentForm');
            const currentDate = new Date().toISOString().split('T')[0];
            document.getElementById('incidentDate').max = currentDate;

            // Form validation and submission
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                if (validateForm()) {
                    // Simulate form submission
                    const submitBtn = form.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;

                    submitBtn.innerHTML = '⏳ Submitting...';
                    submitBtn.disabled = true;

                    setTimeout(() => {
                        alert('🚨 Thank you! Your incident report has been submitted successfully. Our team will review it immediately.');
                        form.reset();
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    }, 2000);
                }
            });

            function validateForm() {
                let isValid = true;
                const requiredFields = form.querySelectorAll('[required]');

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.style.borderColor = '#e74c3c';
                    } else {
                        field.style.borderColor = '#27ae60';
                    }
                });

                if (!isValid) {
                    alert('⚠️ Please fill in all required fields marked with *');
                }

                return isValid;
            }

            // Real-time validation
            const inputs = form.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.hasAttribute('required') && !this.value.trim()) {
                        this.style.borderColor = '#e74c3c';
                    } else {
                        this.style.borderColor = '#27ae60';
                    }
                });

                input.addEventListener('input', function() {
                    if (this.value.trim()) {
                        this.style.borderColor = '#27ae60';
                    }
                });
            });

            // Emergency level visual feedback
            const emergencyLevel = document.getElementById('emergencyLevel');
            emergencyLevel.addEventListener('change', function() {
                const colors = {
                    'low': '#27ae60',
                    'medium': '#f39c12',
                    'high': '#e67e22',
                    'critical': '#e74c3c'
                };
                this.style.borderColor = colors[this.value] || '#ecf0f1';
            });
        });
    </script>
