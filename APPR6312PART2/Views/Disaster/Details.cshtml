@model APPR6312PART2.Models.Disaster
@{
    ViewData["Title"] = "Disaster Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">@Model.DisasterType Incident</h2>
                        <span class="badge bg-warning text-dark fs-6">@Model.Severity Severity</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-success"> Location</h5>
                            <p class="fs-5">@Model.Location</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-success"> Start Date</h5>
                            <p class="fs-5">@Model.StartDate.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5 class="text-success">Description</h5>
                        <p class="fs-6">@Model.Description</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-success"> Affected People</h5>
                            <p class="fs-5">@Model.AffectedPeople.ToString("N0")</p>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-success">Required Aid</h5>
                            <p class="fs-5">@(string.IsNullOrEmpty(Model.RequiredAidType) ? "Not specified" : Model.RequiredAidType)</p>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-success"> Reported</h5>
                            <p class="fs-5">@Model.ReportedAt.ToString("MMM dd, yyyy hh:mm tt")</p>
                        </div>
                    </div>

                    @if (Model.EndDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <h5 class="text-success"> End Date</h5>
                                <p class="fs-5">@Model.EndDate.Value.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ContactPerson) || !string.IsNullOrEmpty(Model.ContactPhone))
                    {
                        <div class="alert alert-info">
                            <h5 class="text-success"> Contact Information</h5>
                            @if (!string.IsNullOrEmpty(Model.ContactPerson))
                            {
                                <p class="mb-1"><strong>Contact:</strong> @Model.ContactPerson</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.ContactPhone))
                            {
                                <p class="mb-0"><strong>Phone:</strong> @Model.ContactPhone</p>
                            }
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="@Url.Action("ViewDisasters", "Disaster")" class="btn btn-outline-secondary me-md-2">Back to List</a>
                        <a href="@Url.Action("Report", "Disaster")" class="btn btn-warning">Report Another Disaster</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>