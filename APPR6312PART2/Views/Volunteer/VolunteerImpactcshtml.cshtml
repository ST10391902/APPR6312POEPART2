@{
    ViewData["Title"] = "Volunteer Impact";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-success text-center mb-5">📊 Volunteer Impact</h1>

            <!-- Impact Statistics -->
            <div class="row mb-5">
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="display-4 text-success fw-bold">0</div>
                            <p class="text-muted">Total Volunteers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-body">
                            <div class="display-4 text-warning fw-bold">0</div>
                            <p class="text-muted">Active Volunteers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="display-4 text-success fw-bold">0</div>
                            <p class="text-muted">New This Month</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-4">
                    <div class="card border-warning h-100">
                        <div class="card-body">
                            <div class="display-4 text-warning fw-bold">5+</div>
                            <p class="text-muted">Available Tasks</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Impact Stories -->
            <div class="row mb-5">
                <div class="col-12">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h4 class="mb-0">🌟 Volunteer Stories</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="text-center">
                                        <div class="text-warning display-6">🏠</div>
                                        <h5 class="text-success">Shelter Support</h5>
                                        <p class="text-muted">Volunteers helped set up 50+ temporary shelters for families displaced by floods.</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="text-center">
                                        <div class="text-warning display-6">🍲</div>
                                        <h5 class="text-success">Meal Distribution</h5>
                                        <p class="text-muted">Our volunteers distributed over 10,000 meals to affected communities.</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="text-center">
                                        <div class="text-warning display-6">🏥</div>
                                        <h5 class="text-success">Medical Assistance</h5>
                                        <p class="text-muted">Medical volunteers provided support to 25+ healthcare facilities.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Skills Distribution -->
            <div class="row">
                <div class="col-12">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h4 class="mb-0">🛠️ Volunteer Skills Distribution</h4>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3 mb-3">
                                    <div class="text-success fw-bold display-6">0</div>
                                    <p class="text-muted">Medical Skills</p>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-success fw-bold display-6">0</div>
                                    <p class="text-muted">Construction Skills</p>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-success fw-bold display-6">0</div>
                                    <p class="text-muted">Communication Skills</p>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-success fw-bold display-6">0</div>
                                    <p class="text-muted">Logistics Skills</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-5">
                <h3 class="text-success mb-3">Ready to Join Our Team?</h3>
                <p class="text-muted mb-4">Become part of our volunteer community and make a real difference.</p>
                <a href="@Url.Action("Register", "Volunteer")" class="btn btn-success btn-lg me-3">Register as Volunteer</a>
                <a href="@Url.Action("AvailableTasks", "Volunteer")" class="btn btn-outline-warning btn-lg">View Available Tasks</a>
            </div>
        </div>
    </div>
</div