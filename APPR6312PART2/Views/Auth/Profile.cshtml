@model APPR6312PART2.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white text-center py-3">
                    <h2 class="mb-0"> My Profile</h2>
                    <p class="mb-0">Manage your account information</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Profile" method="post">
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                    <span class="text-success fw-bold fs-2">@Model.FirstName[0]@Model.LastName[0]</span>
                                </div>
                                <h4 class="text-success">@Model.FirstName @Model.LastName</h4>
                                <p class="text-muted">Member since @Model.CreatedAt.ToString("MMM yyyy")</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold text-success">First Name *</label>
                                <input asp-for="FirstName" class="form-control" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold text-success">Last Name *</label>
                                <input asp-for="LastName" class="form-control" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-success">Email Address</label>
                            <input type="email" class="form-control" value="@Model.Email" disabled>
                            <small class="text-muted">Email cannot be changed</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold text-success">Phone Number *</label>
                            <input asp-for="PhoneNumber" class="form-control" required>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserType" class="form-label fw-bold text-success">Account Type *</label>
                            <select asp-for="UserType" class="form-select" required>
                                <option value="Donor">Donor</option>
                                <option value="Volunteer">Volunteer</option>
                                <option value="Both">Both Donor and Volunteer</option>
                                <option value="Supporter">Supporter</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Update Profile</button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-success mb-3">Account Actions</h5>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("ChangePassword", "Auth")" class="btn btn-outline-warning">Change Password</a>
                                <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-danger">Sign Out</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>