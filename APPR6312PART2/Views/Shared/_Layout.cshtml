<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GiftoftheGivers - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                    <span class="text-warning"></span> Disaster Alleviation Foundation
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "Home")">
                                <strong>Home</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("About", "Home")">
                                <strong>About</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Contact", "Home")">
                                <strong>Contact</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("ViewDisasters", "Disaster")">
                                <strong> Current Disasters</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("Report", "Disaster")">
                                <strong> Report Incident</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("Donate", "Donation")">
                                <strong> Donate</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("Impact", "Donation")">
                                <strong> Track Impact</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("Register", "Volunteer")">
                                <strong> Volunteer</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("AvailableTasks", "Volunteer")">
                                <strong> Available Tasks</strong>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    <strong> Welcome, @Context.Session.GetString("UserName")</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item text-success" href="@Url.Action("Profile", "Auth")">
                                            <strong> My Profile</strong>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-success" href="@Url.Action("Index", "Dashboard")">
                                            <strong> Dashboard</strong>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-success" href="@Url.Action("ViewDonations", "Donation")">
                                            <strong> My Donations</strong>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-success" href="@Url.Action("ViewDisasters", "Disaster")">
                                            <strong> My Reports</strong>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-warning" href="@Url.Action("Logout", "Auth")">
                                            <strong> Logout</strong>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning btn btn-outline-warning btn-sm mx-1" href="@Url.Action("Login", "Auth")">
                                    <strong> Login</strong>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white btn btn-warning btn-sm mx-1" href="@Url.Action("Register", "Auth")">
                                    <strong>Register</strong>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <!-- Success Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-0" role="alert">
                <strong>✅</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Error Messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
                <strong>❌</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-success text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-warning">GiftoftheGivers</h5>
                    <p class="mb-0">Providing relief and support during natural disasters and emergencies.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-2">&copy; 2024 Disaster Alleviation Foundation. All rights reserved.</p>
                    <div class="mt-2">
                        <a href="@Url.Action("Index", "Home")" class="text-white text-decoration-none me-3"><strong>Home</strong></a>
                        <a href="@Url.Action("About", "Home")" class="text-white text-decoration-none me-3"><strong>About</strong></a>
                        <a href="@Url.Action("Contact", "Home")" class="text-white text-decoration-none me-3"><strong>Contact</strong></a>
                        <a href="@Url.Action("ViewDisasters", "Disaster")" class="text-white text-decoration-none me-3"><strong>Disasters</strong></a>
                        <a href="@Url.Action("Report", "Disaster")" class="text-white text-decoration-none me-3"><strong>Report</strong></a>
                        <a href="@Url.Action("Donate", "Donation")" class="text-white text-decoration-none me-3"><strong>Donate</strong></a>
                        <a href="@Url.Action("Impact", "Donation")" class="text-white text-decoration-none me-3"><strong>Impact</strong></a>
                        <a href="@Url.Action("Register", "Volunteer")" class="text-white text-decoration-none me-3"><strong>Volunteer</strong></a>
                        <a href="@Url.Action("AvailableTasks", "Volunteer")" class="text-warning text-decoration-none"><strong>Tasks</strong></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>